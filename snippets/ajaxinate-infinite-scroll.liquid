  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var endlessScroll = new Ajaxinate({
        container: '#product-grid',
        pagination: '#AjaxinatePagination',
        loadingText:
          '<img src="//cake-dawn.myshopify.com/cdn/shop/t/3/assets/ajaxinate-spinner.gif?v=98910404903699804181709185034" width="200px" height="200px" />',
      });
    });
  </script>
{% else %}
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      var endlessScroll = new Ajaxinate({
